<?php

function styles_setup() {
  // ENABLE WIDTHS IN GUTENBERG
	add_theme_support( 'align-wide' );
}
add_action( 'after_setup_theme', 'styles_setup' );


add_action('admin_head', 'my_custom_fonts');
add_action('wp_head', 'my_custom_fonts');

